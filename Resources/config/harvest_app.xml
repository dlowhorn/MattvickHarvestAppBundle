<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="mattvick_harvest_app.file">null</parameter>
        <parameter key="mattvick_harvest_app._user">null</parameter>
        <parameter key="mattvick_harvest_app._password">null</parameter>
        <parameter key="mattvick_harvest_app._account">null</parameter>
        <parameter key="mattvick_harvest_app._ssl">null</parameter>
        <parameter key="mattvick_harvest_app._mode">null</parameter>
        <parameter key="mattvick_harvest_app._headers">null</parameter>
        
        <parameter key="mattvick_harvest_app.api.class">HarvestApi</parameter>
        <parameter key="mattvick_harvest_app.service.class">Mattvick\HarvestAppBundle\Services\HarvestApp</parameter>
    </parameters>
    
    <services>
        <service id="harvest_app" class="%mattvick_harvest_app.service.class%">
            <argument type="service" id="mattvick_harvest_app.api"/>
        </service>
        
        <service id="mattvick_harvest_app.api" class="%mattvick_harvest_app.api.class%">
            <file>%mattvick_harvest_app.file%</file>
            <argument key="_user">%mattvick_harvest_app._user%</argument>
            <argument key="_password">%mattvick_harvest_app._password%</argument>
            <argument key="_account">%mattvick_harvest_app._account%</argument>
            <argument key="_ssl">%mattvick_harvest_app._ssl%</argument>
            <argument key="_mode">%mattvick_harvest_app._mode%</argument>
            <argument key="_headers">%mattvick_harvest_app._headers%</argument>
        </service>
    </services>
</container>
